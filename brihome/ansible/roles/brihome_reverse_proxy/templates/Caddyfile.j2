(common) {
    tls /certs/brihome.me.cer /certs/brihome.me.key
    header {
        Strict-Transport-Security "max-age=31536000;"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
    }
}

chat.{{ local_domain }} {
    import common
    reverse_proxy {{  open_web_ui_ip }}:{{ open_web_ui_port }} 
}
proxmox.{{ local_domain }} {
    import common
    reverse_proxy {{ proxmox_ip }}:{{ proxmox_port }} 
}

homeassistant.{{ local_domain }} {
    import common
    reverse_proxy {{ homeassistant_ip }}:{{ homeassistant_port }} 

}
hoarder.{{ local_domain }} {
    import common
    reverse_proxy {{ hoarder_ip }}:{{ hoarder_port }} 
}

paperless.{{ local_domain }} {
    import common
    reverse_proxy {{ paperless_ip }}:{{ paperless_port }} 
}

mealie.{{ local_domain }} {
    import common
    reverse_proxy {{ mealie_ip }}:{{ mealie_port }}
}